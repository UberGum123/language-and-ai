{
    "data": {
        "file_path": "data/political_leaning.csv",
        "text_column": "post",
        "label_column": "political_leaning",
        "author_column": "auhtor_ID"
    },
    "descriptive_statistics": {
        "enabled": false,
        "plot_label_distribution": true,
        "word_count_per_label": true,
        "get_author_info": true,
        "get_top_n_words_per_label": 50
    },
    "modeling": {
        "enabled": true,
        "model_type": "BERT",
        "hyperparameters": {
            "model_name": "bert-base-uncased",
            "learning_rate": 2e-5,
            "epochs": 3,
            "batch_size": 4,
            "max_length": 256
        },
        "enable_visualizations": true
    },
    "preprocessing": {
        "number_of_folds": 5,
        "get_descriptive_statistics_after_preprocessing": false
    },
    "masking": {
        "enabled": true,
        "get_descriptive_statistics_after_masking": false,
        "masking_strategy": 4
    },
    "load_dataset": false
}